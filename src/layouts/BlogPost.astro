---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import BtnWa from '../components/BtnWa.astro';
import BtnShared from '../components/BtnShared.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="es">
	<head>
		<BaseHead title={title} description={description} image={heroImage} />
		<style>
			main {
				width: 920px;
				width: calc(100% - 10px);
				max-width: 100%;
				margin: 0 auto;
			}
			.hero-image {
				width: 100%;
				margin-top: 10px;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 10px);
				margin: auto;
				padding: 5px;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}

			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
				margin-top: 25px;
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{
						heroImage && (
							<img width={1020} height={510} src={heroImage} alt="" />
						)
					}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Ultima actualizaci√≥n el <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1 class="text-3xl font-bold text-gray-900 text-start mb-4 mt-10">
							{title}
						</h1>
						<hr />
					</div>
					<slot />
					<div class="flex items-center justify-center">
						<div class="flex items-center space-x-4">
							<BtnWa texto="Tienes una Consulta?" />
							<BtnShared />
						</div>
					</div>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
